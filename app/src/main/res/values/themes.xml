<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MessengerApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/light_blue</item>
        <item name="textInputFilledStyle">@style/Widget.App.TextInputLayout</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.App.Button.OutlinedButton</item>
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>
        <item name="bottomAppBarStyle">@style/Widget.App.BottomAppBar</item>
    </style>

    <style name="Theme.MessengerApp" parent="Base.Theme.MessengerApp" />

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/off_white</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearance.App.SmallComponent.FilledTextInputLayout
        </item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/light_blue</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent.FilledTextInputLayout" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100dp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/blue</item>
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.App.FloatingActionButton</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.FloatingActionButton" parent="ShapeAppearanceOverlay.Material3.FloatingActionButton">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.App.BottomAppBar" parent="Widget.Material3.BottomAppBar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomAppBar</item>
        <item name="fabAlignmentMode">center</item>
        <item name="fabAnchorMode">cradle</item>
        <item name="fabCradleMargin">@dimen/x_small_space</item>
        <item name="addElevationShadow">true</item>
    </style>

    <style name="ThemeOverlay.App.BottomAppBar" parent="ThemeOverlay.Material3.BottomAppBar">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="roundedImageViewStyle" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>